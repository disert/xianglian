<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <com.xianglian.love.view.WheelView
        android:id="@+id/year"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:lineHeight="1dp"
        app:itemNumber="3"
        app:maskHeight="32dp"
        app:noEmpty="true"
        app:normalTextSize="14sp"
        app:lineColor="@android:color/holo_green_light"
        app:normalTextColor="@android:color/holo_orange_dark"
        app:selectedTextColor="@android:color/holo_purple"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp"
        />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年"
        android:textSize="13sp"
        />-->

    <com.xianglian.love.view.WheelView
        android:id="@+id/month"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="@android:color/holo_blue_bright"
        app:lineHeight="1dp"
        app:maskHeight="32dp"
        app:noEmpty="true"
        app:normalTextSize="14sp"
        app:normalTextColor="@android:color/holo_green_light"
        app:selectedTextColor="@android:color/holo_blue_dark"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp"
        />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月"
        android:textSize="13sp"
        />-->

    <com.xianglian.love.view.WheelView
        android:id="@+id/day"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="@android:color/holo_green_light"
        app:lineHeight="1dp"
        app:maskHeight="32dp"
        app:noEmpty="true"
        app:normalTextSize="14sp"
        app:normalTextColor="@android:color/holo_orange_dark"
        app:selectedTextColor="@android:color/holo_purple"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp"/>

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日"
        android:textSize="13sp"
        />-->
</LinearLayout>