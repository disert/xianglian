<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lib_color_bg2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/loading_icon"
            android:layout_width="@dimen/lib_user_icon_big"
            android:layout_height="@dimen/lib_user_icon_big"
            android:layout_gravity="center"
            app:actualImageScaleType="fitCenter"
            app:placeholderImage="@drawable/loading"
            app:progressBarImageScaleType="fitCenter"
            app:roundedCornerRadius="3dp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/empty_bg"/>
    </LinearLayout>

</RelativeLayout>