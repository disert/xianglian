<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.SelectSexActivity">

    <include layout="@layout/view_title_bar_translate" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/select_sex_of_women"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:alpha="0.7"
                android:background="@drawable/select_sex_center_bg_selector"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:text="女"
                    android:textColor="@color/colorAccent"
                    android:textSize="23sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_sex_of_men"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:alpha="0.7"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/select_sex_center_bg_selector"
                android:layout_marginTop="80dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="@color/colorAccent"
                    android:textSize="23sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
