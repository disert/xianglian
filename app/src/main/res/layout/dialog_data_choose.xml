<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_dialog_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.xianglian.love.wheel.widget.WheelView
                android:id="@+id/wheel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#3316ac3a"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="16sp"/>

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#dddddd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                style="@style/Button_DialogConfirmNew"
                android:background="@drawable/btn_dialog_left"
                android:text="@string/cancel"
                android:textColor="@drawable/text_gray_blue"/>

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:background="#dddddd"/>

            <Button
                android:id="@+id/confirm"
                style="@style/Button_DialogConfirmNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_right"
                android:text="@string/confirm"
                android:textColor="@drawable/text_blue_gray"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>