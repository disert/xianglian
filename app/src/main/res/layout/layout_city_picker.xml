<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <com.wl.lianba.view.WheelView
        android:id="@+id/province_wv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineHeight="1dp"
        app:maskHeight="48dp"
        app:noEmpty="true"
        app:normalTextSize="14sp"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp"
        app:lineColor="@android:color/holo_green_light"
        app:normalTextColor="@android:color/holo_orange_dark"
        app:selectedTextColor="@android:color/holo_purple"/>

    <com.wl.lianba.view.WheelView
        android:id="@+id/city_wv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineHeight="1dp"
        app:maskHeight="48dp"
        app:noEmpty="true"
        app:normalTextSize="14sp"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp"
        app:lineColor="@android:color/holo_green_light"
        app:normalTextColor="@android:color/holo_orange_dark"
        app:selectedTextColor="@android:color/holo_purple"/>

</LinearLayout>